<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.energolabs.evergo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.energolabs.evergo.EvergoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDVC2DA6Bpdicdseo3KWS5giFk9ExA8NI4" />

        <activity
            android:name="com.energolabs.evergo.modules.loading.activities.LoadingActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.energolabs.evergo.ui.activities.DetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.energolabs.evergo.ui.activities.DetailActivityNoCollapsing"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.energolabs.evergo.ui.activities.DetailActivityNoToolbar"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.energolabs.evergo.modules.main.activities.MainActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>