<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:footer="@layout/footer_load_more_market">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/transparent_medium_horizontal_divider"
                android:orientation="vertical"
                android:showDividers="beginning|end">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:id="@+id/ll_currency_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/energo_large_spacing">

                        <TextView
                            android:id="@+id/tv_currency_balance_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="@string/energo_market_currency_balance_label"
                            android:textColor="@color/market_info_label_text_color"
                            android:textSize="@dimen/energo_text_medium" />

                        <TextView
                            android:id="@+id/tv_currency_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textColor="@color/market_info_label_text_color"
                            android:textSize="@dimen/energo_text_double_large"
                            tools:text="36576.98" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_currency_icon"
                        android:layout_width="95.2dp"
                        android:layout_height="81.2dp"
                        android:layout_alignBottom="@id/ll_currency_balance"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_market_currency_symbol"
                        android:contentDescription="@string/energo_content_description_icon"
                        android:paddingStart="@dimen/energo_small_spacing"
                        android:paddingTop="@dimen/energo_large_spacing"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_market_order_dollar_symbol"
                        tools:ignore="RtlSymmetry" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/energo_medium_spacing"
                    android:background="@android:color/white"
                    android:padding="@dimen/energo_large_spacing">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gradient_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_quick_order"
                            style="@style/energo_market_quick_type_selector"
                            android:text="@string/energo_market_order_quick" />

                        <TextView
                            android:id="@+id/tv_market_order"
                            style="@style/energo_market_order_type_selector"
                            android:text="@string/energo_market_order_market" />

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/energo_divider_medium"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/energo_large_spacing"
                    android:paddingTop="@dimen/energo_large_spacing">

                    <TextView
                        android:id="@+id/tv_energy_amount_label"
                        style="@style/energo_market_input_label"
                        android:text="@string/energo_market_order_energy_amount_label" />

                    <EditText
                        android:id="@+id/et_energy_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="@string/energo_market_buy_energy_amount_hint"
                        android:inputType="numberDecimal"
                        android:paddingEnd="@dimen/energo_large_spacing"
                        android:paddingStart="@dimen/energo_large_spacing" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/energo_divider_medium"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/energo_large_spacing"
                    android:paddingTop="@dimen/energo_large_spacing">

                    <TextView
                        android:id="@+id/tv_energy_price_label"
                        style="@style/energo_market_input_label"
                        android:drawablePadding="@dimen/energo_very_small_spacing"
                        android:text="@string/energo_market_order_energy_price_label" />

                    <EditText
                        android:id="@+id/et_energy_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="@string/energo_market_buy_energy_price_hint"
                        android:inputType="numberDecimal"
                        android:paddingEnd="@dimen/energo_large_spacing"
                        android:paddingStart="@dimen/energo_large_spacing" />

                </LinearLayout>

                <include
                    layout="@layout/frame_market_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/energo_medium_spacing"
                    android:layout_marginTop="@dimen/energo_medium_spacing" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.liaoinstan.springview.widget.SpringView>

    <RelativeLayout
        android:id="@+id/rl_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#3DCDD5"
        android:padding="@dimen/energo_large_spacing">

        <TextView
            android:id="@+id/tv_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/energo_market_order_total"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/tv_fee_description"
            style="@style/energo_market_fee_note"
            android:layout_alignBottom="@id/tv_total_label"
            android:layout_alignTop="@id/tv_total_label"
            android:layout_toEndOf="@id/tv_total_label"
            tools:text="+1% fee" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="@dimen/energo_text_double_very_small"
            android:textStyle="bold"
            tools:text="88960.12" />

        <TextView
            android:id="@+id/tv_fee_total"
            style="@style/energo_market_fee_note"
            android:layout_alignBottom="@id/tv_total_price"
            android:layout_alignTop="@id/tv_total_price"
            android:layout_toEndOf="@id/tv_total_price"
            tools:text="(Include 500)" />

        <TextView
            android:id="@+id/tv_order_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_fee_total"
            android:gravity="end|center_vertical"
            android:text="@string/energo_market_buy_action"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="@dimen/energo_text_large"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>