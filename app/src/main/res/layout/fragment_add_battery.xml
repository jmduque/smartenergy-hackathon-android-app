<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#293245"
        android:divider="@drawable/gray_horizontal_divider"
        android:dividerPadding="@dimen/energo_medium_spacing"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <LinearLayout
            android:id="@+id/ll_name"
            style="@style/energo_add_battery_item_frame">

            <ImageView
                style="@style/energo_add_battery_item_image_tag"
                android:src="@drawable/ic_name_tag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:labelFor="@+id/et_name"
                android:text="@string/energo_add_battery_name_tag"
                android:textColor="?android:textColorTertiaryInverse"
                android:textSize="@dimen/energo_text_medium" />

            <TextView
                android:id="@+id/et_name"
                style="@style/energo_add_battery_item_value"
                android:hint="@string/energo_add_battery_name_tag"
                tools:text="Jose" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_capacity"
            style="@style/energo_add_battery_item_frame">

            <ImageView
                style="@style/energo_add_battery_item_image_tag"
                android:src="@drawable/ic_capacity_tag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:labelFor="@+id/et_capacity"
                android:text="@string/energo_add_battery_capacity_tag"
                android:textColor="?android:textColorTertiaryInverse"
                android:textSize="@dimen/energo_text_medium" />

            <TextView
                android:id="@+id/et_capacity"
                style="@style/energo_add_battery_item_value"
                android:hint="@string/energo_add_battery_capacity_tag"
                tools:text="121.12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_type"
            style="@style/energo_add_battery_item_frame">

            <ImageView
                style="@style/energo_add_battery_item_image_tag"
                android:src="@drawable/ic_type_tag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:labelFor="@+id/et_type"
                android:text="@string/energo_add_battery_type_tag"
                android:textColor="?android:textColorTertiaryInverse"
                android:textSize="@dimen/energo_text_medium" />

            <TextView
                android:id="@+id/et_type"
                style="@style/energo_add_battery_item_value"
                android:drawableEnd="@drawable/ic_type_arrow"
                android:drawablePadding="@dimen/energo_medium_spacing"
                android:hint="@string/energo_add_battery_type_tag"
                android:textAllCaps="true"
                tools:text="EV" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_location"
            style="@style/energo_add_battery_item_frame">

            <ImageView
                style="@style/energo_add_battery_item_image_tag"
                android:src="@drawable/ic_location_tag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:labelFor="@+id/et_location"
                android:text="@string/energo_add_battery_location_tag"
                android:textColor="?android:textColorTertiaryInverse"
                android:textSize="@dimen/energo_text_medium" />

            <TextView
                android:id="@+id/et_location"
                style="@style/energo_add_battery_item_value"
                android:hint="@string/energo_add_battery_location_tag"
                android:textSize="@dimen/energo_text_small"
                tools:text="Twin Towers Hotel\n124.123, 133.321" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/energo_very_large_spacing"
        android:src="@drawable/ic_add_24dp"
        app:backgroundTint="@android:color/white"
        app:borderWidth="0dp"
        app:fabSize="normal" />

</RelativeLayout>