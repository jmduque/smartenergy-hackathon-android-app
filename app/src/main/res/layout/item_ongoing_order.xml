<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/energo_small_spacing"
    android:layout_marginEnd="@dimen/energo_medium_spacing"
    android:layout_marginStart="@dimen/energo_medium_spacing"
    android:layout_marginTop="@dimen/energo_small_spacing"
    app:cardCornerRadius="@dimen/energo_corner_radius_small">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:divider="@drawable/energo_order_transactions_divider"
        android:dividerPadding="@dimen/energo_medium_spacing"
        android:orientation="vertical"
        android:showDividers="middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/energo_large_spacing">

            <TextView
                android:id="@+id/tv_transaction_label"
                style="@style/energo_market_order_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/energo_market_ongoing_buy_transaction_label" />

            <TextView
                android:id="@+id/tv_transaction_date"
                style="@style/energo_market_order_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/tv_transaction_label"
                android:drawablePadding="@dimen/energo_very_small_spacing"
                android:gravity="end"
                tools:text="18-11-2016" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/energo_market_ongoing_order_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_transaction_label"
                android:layout_marginBottom="@dimen/energo_small_spacing"
                android:layout_marginTop="@dimen/energo_small_spacing"
                android:max="100"
                android:progress="33" />

            <TextView
                android:id="@+id/tv_transaction_traded"
                style="@style/energo_market_order_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/progressBar"
                android:drawablePadding="@dimen/energo_very_small_spacing"
                android:drawableStart="@drawable/bg_market_order_sell"
                android:textColor="@color/energo_text_color_primary"
                tools:text="Traded: 35464" />

            <TextView
                android:id="@+id/tv_transaction_remaining"
                style="@style/energo_market_order_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/progressBar"
                android:layout_toEndOf="@id/tv_transaction_traded"
                android:drawableEnd="@drawable/bg_market_ongoing_order_remaining"
                android:drawablePadding="@dimen/energo_very_small_spacing"
                android:gravity="end"
                android:textColor="@color/energo_text_color_primary"
                tools:text="Remaining: 35464" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>