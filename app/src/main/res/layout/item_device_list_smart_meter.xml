<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/energo_medium_spacing"
    android:layout_marginStart="@dimen/energo_medium_spacing"
    android:layout_marginTop="@dimen/energo_medium_spacing"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/energo_corner_radius_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/energo_medium_spacing">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/energo_content_description_icon"
            android:src="@drawable/ic_device_list_smart_meter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/energo_medium_spacing"
            android:layout_marginStart="@dimen/energo_medium_spacing"
            android:layout_toEndOf="@id/iv_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/energo_text_color_primary"
                tools:text="Sanya House" />

            <TextView
                android:id="@+id/tv_micro_grid_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/energo_text_color_secondary"
                tools:text="Micro Grid" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_grid_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="@dimen/energo_text_tiny"
                tools:text="Main Grid" />

            <ImageView
                android:id="@+id/iv_grid_status_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/energo_very_small_spacing"
                android:contentDescription="@string/energo_content_description_icon"
                android:src="@drawable/ic_main_grid" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>