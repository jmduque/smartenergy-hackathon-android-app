<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/energo_medium_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/energo_small_spacing"
            android:layout_marginEnd="@dimen/energo_medium_spacing"
            android:layout_marginStart="@dimen/energo_medium_spacing"
            android:layout_marginTop="@dimen/energo_small_spacing">

            <TextView
                android:id="@+id/tv_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:labelFor="@+id/tv_price_value"
                android:text="@string/energo_market_agent_latest_price"
                android:textColor="@color/energo_text_color_primary"
                android:textSize="@dimen/energo_text_tiny" />

            <TextView
                android:id="@+id/tv_price_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/energo_small_spacing"
                android:layout_marginStart="@dimen/energo_small_spacing"
                android:layout_toEndOf="@id/tv_price_label"
                android:textColor="#f1bd6a"
                android:textSize="@dimen/energo_text_small"
                android:textStyle="bold"
                tools:text="0.621" />

        </RelativeLayout>

        <com.energolabs.evergo.ui.views.EnergoLineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="64dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>