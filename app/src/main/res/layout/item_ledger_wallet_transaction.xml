<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="@dimen/energo_divider_medium"
    android:background="@android:color/white"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/tv_date"
        style="@style/energo_ledger_transaction_date"
        tools:text="11-25\n18:23" />

    <ImageView
        android:id="@+id/iv_icon"
        style="@style/energo_ledger_transaction_icon"
        android:src="@drawable/ic_withdraw_transaction_icon" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/energo_large_spacing"
        android:paddingStart="@dimen/energo_large_spacing"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/energo_text_color_primary"
        tools:text="+1532.12" />

</LinearLayout>