<?xml version="1.0" encoding="utf-8"?>
<com.energolabs.evergo.ui.views.EnergoSmartTabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/estl_tabs"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/white"
    app:stl_clickable="true"
    app:stl_defaultTabBackground="?attr/selectableItemBackground"
    app:stl_defaultTabTextAllCaps="false"
    app:stl_defaultTabTextColor="#333333"
    app:stl_defaultTabTextMinWidth="0dp"
    app:stl_defaultTabTextSize="@dimen/energo_text_small"
    app:stl_distributeEvenly="true"
    app:stl_dividerColor="@android:color/transparent"
    app:stl_dividerThickness="1dp"
    app:stl_drawDecorationAfterTab="false"
    app:stl_indicatorAlwaysInCenter="false"
    app:stl_indicatorColor="@color/energo_market_color"
    app:stl_indicatorCornerRadius="2dp"
    app:stl_indicatorGravity="bottom"
    app:stl_indicatorInFront="false"
    app:stl_indicatorInterpolation="linear"
    app:stl_indicatorThickness="4dp"
    app:stl_indicatorWithoutPadding="false"
    app:stl_overlineColor="@color/energo_market_color"
    app:stl_overlineThickness="0dp"
    app:stl_titleOffset="24dp" />