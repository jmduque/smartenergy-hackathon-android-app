<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@android:color/background_light</item>
        <!--<item name="android:button">@style/BaseButton</item> -->
    </style>

    <style name="MainActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:theme">@style/Theme.AppCompat.NoActionBar</item>
        <item name="android:background">@color/energo_actionbar_background</item>
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="background">@color/energo_actionbar_background</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="energo_button">
        <item name="android:gravity">center</item>
    </style>

