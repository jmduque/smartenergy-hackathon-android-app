    <style name="energo_login_text_input_layout_theme" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">@dimen/energo_text_small</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="energo_login_text_input_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/energo_login_text_input_layout_theme</item>
    </style>

    <style name="energo_login_edit_text_theme" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">@dimen/energo_text_small</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@android:color/white</item>
    </style>

