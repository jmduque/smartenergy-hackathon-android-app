<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="9dip" />
            <gradient
                android:angle="180"
                android:endColor="#55E0F2"
                android:startColor="#66E7BD" />
            <size android:width="18dip" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <scale
            android:scaleWidth="100%"
            android:useIntrinsicSizeAsMinimum="true">
            <shape>
                <corners android:radius="9dip" />
                <gradient
                    android:angle="180"
                    android:endColor="#FBBC8F"
                    android:startColor="#E76F66" />
                <size android:width="18dip" />
            </shape>
        </scale>
    </item>

</layer-list>